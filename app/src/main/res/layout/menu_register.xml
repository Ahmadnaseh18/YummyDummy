<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Back Button -->

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"
            android:src="@drawable/back_icon_arrow" />

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/nona_salad_removebg_preview__2__1" />

        <!-- Register Text -->
        <TextView
            android:id="@+id/registerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/registerSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your new account"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <!-- Full Name -->
        <EditText
            android:id="@+id/fullNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F3E9B5"
            android:hint="Full Name"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#4B4B4B" />

        <!-- Email or Phone -->
        <EditText
            android:id="@+id/emailPhoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F3E9B5"
            android:hint="Email or Phone"
            android:inputType="textEmailAddress|phone"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#4B4B4B" />

        <!-- Password -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F3E9B5"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#4B4B4B" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/confirmPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F3E9B5"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#4B4B4B" />

        <!-- Terms and Policy Text -->
        <TextView
            android:id="@+id/termsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to\nTerms of Use and Privacy Policy."
            android:textSize="12sp"
            android:textColor="#E65100"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F5F1C7"
            android:text="SIGN UP"
            android:textAllCaps="true"
            android:textColor="#E65100" />

    </LinearLayout>

</ScrollView>
